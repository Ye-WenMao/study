<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!--
    namespace="Dao接口的全限定名"
-->
<mapper namespace="com.ywm.dao.CheckItemDao">
    <!--查询所有 【注意】这里用的是resultType，不是resultMap -->

    <!-- 删检查项-->
    <delete id="deleteById">
        delete from t_checkitem where id = #{id}
    </delete>
    <!-- 查询检查项-->
    <select id="findAll" resultType="CheckItem">
        select * from t_checkitem
    </select>
    <!--获取总数-->
    <select id="getTotal" resultType="java.lang.Integer">
        select count(*) from t_checkitem
    </select>
    <!--分页查检查项-->
    <select id="findPage" resultType="com.ywm.pojo.CheckItem">
        select * from t_checkitem limit #{param1},#{param2}
    </select>
    <!--分页查检查项二-->
    <select id="findByCondition" resultType="Checkitem" parameterType="String">
        select * From t_checkitem
        <if test="value !=null and value.length > 0">
            where code like #{value} or name like #{value}
        </if>
    </select>

    <!-- 添加检查项 -->
    <insert id="add">
        insert into t_checkitem (code,name,sex,age,price,type,remark,attention)
         values (#{code},#{name},#{sex},#{age},#{price},#{type},#{remark},#{attention})
    </insert>

    <!--改检查项-->
    <update id="update" parameterType="CheckItem">
         update t_checkitem set
        code=#{code},
        name=#{name},
        sex=#{sex},
        age=#{age},
        price=#{price},
        type=#{type},
        remark=#{remark},
        attention=#{attention}
    where id=#{id}
    </update>
</mapper>
